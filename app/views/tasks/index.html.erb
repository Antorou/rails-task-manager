<div class="container d-flex justify-content-center">
  <div class="card border-0 my-5 shadow-sm" style="width: 100%; max-width: 500px; border-radius: 10px;">
    <div class="card-body text-center p-4">
      <h3 class="card-title mb-4" style="font-weight: 300;">Tasks</h3>

      <ul class="list-group list-group-flush">
        <% @tasks.each do |task| %>
          <li class="list-group-item border-0 py-2">
            <%= link_to task.title, task_path(task), class: "text-decoration-none text-muted" %>
          </li>
        <% end %>
      </ul>

      <div class="mt-4">
        <%= link_to 'Add New Task', new_task_path, class: "btn btn-outline-primary rounded-pill px-4" %>
      </div>
    </div>
  </div>
</div>
