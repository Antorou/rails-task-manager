<div class="container d-flex justify-content-center">
  <div class="card my-5 p-4 shadow" style="width: 100%; max-width: 500px;">
    <h3 class="card-title text-center mb-4">New Task</h3>

    <%= form_with model: @task, local: true do |f| %>
      <div class="form-group mb-3">
        <%= f.label :title, class: "form-label" %>
        <%= f.text_field :title, class: "form-control", placeholder: "Enter task title" %>
      </div>

      <div class="form-group mb-3">
        <%= f.label :details, class: "form-label" %>
        <%= f.text_area :details, class: "form-control", placeholder: "Enter task details" %>
      </div>

      <div class="form-check mb-4">
        <%= f.check_box :completed, class: "form-check-input" %>
        <%= f.label :completed, class: "form-check-label" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Save Task", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
