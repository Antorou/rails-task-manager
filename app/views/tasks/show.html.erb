<div class="container d-flex justify-content-center">
  <div class="card my-5 p-4 shadow" style="width: 100%; max-width: 500px;">
    <h1 class="card-title text-center mb-4">Task Details</h1>

    <div class="mb-3">
      <p><strong>Title:</strong> <%= @task.title %></p>
    </div>

    <div class="mb-3">
      <p><strong>Details:</strong> <%= @task.details %></p>
    </div>

    <div class="mb-4">
      <p><strong>Completed:</strong> <%= @task.completed ? "Yes" : "No" %></p>
    </div>

    <div class="d-flex justify-content-between">
      <%= link_to 'Back to Task List', tasks_path, class: "btn btn-secondary" %>
      <%= link_to 'Edit Task', edit_task_path(@task), class: "btn btn-warning" %>
      <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
